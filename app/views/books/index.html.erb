<div class='container'>
<div class="row">
  <div class="col-xs-3" style="background-color: white">
<% if @book.errors.any? %>
   <div id="error_explanation">
    <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

    <%= render  'users/userinfo', user: current_user %>

    <%= render 'books/new', book: @book %>

  </div>

  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">

            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>

            <tbody>
            <% @books.each do |book| %>
            <tr class="new table">
              <td><%= link_to user_path(book.user_id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %><% end %></td>
              <td><span><%= link_to book.title, book, class: "books_#{book.id}" %></span> </td>
              <td><span><%= book.body %></span></td>

              <td>
                <%= render 'favorites/favorites_button', book: book %>
              </td>

              <td>コメント数 : <span id="book_comments_count"><%= book.book_comments.count %></span></td>
            </tr>
          <% end %>
                </tr>
             </tbody>
    </table>
    <p>CopyRight Infratop.inc</p>
  </div>
</div>
</div>