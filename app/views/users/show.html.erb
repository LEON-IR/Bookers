<body>

	<% if flash[:success] %>
	  <p><%= flash[:success] %></p>
	<% end %>

    <div class="container">
    	<div class="row">
    		<div class="col-xs-3">
    			<%= render  'users/userinfo', user: @user %>

                <%= render 'books/new', book: @book %>
    </div>
    <div class="col-xs-9">
    	<h2>Books</h2>

    	<table class="table table-striped">
    		<thead>
    			<tr>
    				<th></th>
    				<th>Title</th>
    				<th>Opinion</th>
    			</tr>
    		</thead>
    		<tbody>
    			<% @books.each do |book| %>
    			  <tr class="new table">
    			  	<td><span><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></span></td>
    			  	<td><span><%= link_to book.title, book, class: "books_#{book.id}" %></span> </td>
    			  	<td><span><%= book.body %></span> </td>
    			  </tr>
    			<% end %>
    		</tbody>
    	</table>
    </div>
    </div>
</div>
<div class='container'>
    <div class='row'>
        <div class='col-xs-3 col-xs-offset-9'>
            <p>CopyRight Infratop.inc</p>
        </div>
    </div>
</div>