<h2>User info</h2>

<%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg"%>
 <table class="table table-hover">

                        <tbody>
                            <tr>
                                <td><strong>name</strong></td>
                                <td><strong><%= user.name %></strong></td>
                            </tr>
                            <tr>
                                <td><strong>introduction</strong></td>
                                <td><strong><%= user.introduction %></strong></td>
                            </tr>
                        </tbody>
                      </table>
<div class="row">
    <%= link_to '', edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
</div>